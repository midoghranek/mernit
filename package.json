{
  "name": "mernit",
  "version": "0.0.1",
  "private": true,
  "main": "server.js",
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "start:api": "node src/api/index.js",
    "start:server": "npm run react:build && node server.js",
    "start": "concurrently \"npm run start:api\" \"npm run start:server\" ",
    "dev:api": "nodemon src/api/index.js",
    "dev": "concurrently \"npm run dev:api\" \"npm run react:start\" ",
    "git": "git add . && git commit -m",
    "postgit": "git push --all"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-scripts": "3.1.2",
    "concurrently": "^4.1.2"
  },
  "devDependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "node-sass": "^7.0.0",
    "nodemon": "^1.19.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
